doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='assets/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet',href='css/wechat/wechatShowProduct.css')
body(ng-app='wechatApp', ng-controller='wechatProductController')
  nav.navbar.navbar-default
    .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            |         
            span.icon-bar
            |         
            span.icon-bar
            |         
            span.icon-bar
          |       
          a.navbar-brand(href='#') 商品展示
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#')
                | Link 
                span.sr-only (current)
          
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Link
            |         
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | Dropdown 
                span.caret
              |           
              ul.dropdown-menu(role='menu')
                li
                  a(href='#') Action
                |             
                li
                  a(href='#') Another action
        // /.navbar-collapse
      // /.container-fluid
  div.login
    div.container.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      div(id='product' class='product')
        div.box.panel.panel-info(ng-repeat="x in products")
          div.panel-heading
              h1.panel-title {{x.ProductName}}
          div.pic
            img(src="{{x.ProductImgPath}}",style="width:90%",title="{{x.ProductName}}")
          div.info
            div.panel-body(style="position:relative;font-size:12px;")
              span(style="color: #d46868") ¥: {{x.ProductPrice}}
              span 类别: {{x.ProductTypeName}}
              span 库存: {{x.TotalNum}} 件
              p 购买数量:
                input(type='number',value='0',style='width:30%;padding-left:5px;border-radius:3px;',min='0',ng-model='x.OrderCount')
              //p.pull-right.bottom(style="font-size:15px;bottom:20px;position:absolute;right:20px") {{x.UserName}} &nbsp;&nbsp; {{x.CreateTime}}
        div
          input.btn.btn-primary(type='button',value='提交订单',ng-click='submitOrder()')
  script(src='assets/js/jquery-2.0.3.min.js')
  script(src='assets/js/bootstrap.min.js')
  script(src='/bower_components/angular/angular.min.js')
  script(src='/js/angularjs/controller/controllers.js')
  script(src='/js/angularjs/controller/wechatController.js')